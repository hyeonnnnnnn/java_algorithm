1. 
SELECT II.INGREDIENT_TYPE   , SUM(FH.TOTAL_ORDER) AS TOTAL_ORDER
FROM FIRST_HALF FH  JOIN  ICECREAM_INFO II ON (FH.FLAVOR = II.FLAVOR)  --LEFT JOIN  (왼쪽 테이블 전부 포함)
GROUP BY II.INGREDIENT_TYPE
ORDER BY TOTAL_ORDER

 
2. 속도 비교해보기!
-- 코드를 입력하세요
SELECT A.FOOD_TYPE, 
         REST_ID, 
         REST_NAME,
         FAVORITES
FROM REST_INFO  A
GROUP BY FOOD_TYPE , 
              REST_ID, 
              REST_NAME,
              FAVORITES
HAVING FAVORITES = 
   (SELECT MAX(FAVORITES)
    FROM REST_INFO
    WHERE FOOD_TYPE = A.FOOD_TYPE)
ORDER BY FOOD_TYPE DESC

---- Oracle 다른 답안 1
SELECT FOOD_TYPE, REST_ID, REST_NAME, FAVORITES
FROM REST_INFO
WHERE (FOOD_TYPE, FAVORITES) IN (SELECT FOOD_TYPE, MAX(FAVORITES) FROM REST_INFO GROUP BY FOOD_TYPE)
ORDER BY FOOD_TYPE DESC;


3.
-- 코드를 입력하세요
SELECT 
     AI.ANIMAL_ID,
     AI.NAME
FROM ANIMAL_INS AI LEFT JOIN  
     ANIMAL_OUTS AO ON (AI.ANIMAL_ID =AO.ANIMAL_ID)
-- WHERE ROWNUM <=2    --오라클만 가능, LIMIT과 다르게 줄 수 조절 안됨, 1부터 가능
ORDER BY AO.DATETIME - AI.DATETIME DESC
LIMIT 2  --오라클에서 두줄출력  LIMIT 2, 10 2~ 10 